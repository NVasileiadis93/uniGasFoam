FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fieldPropertiesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

uniGasFields
(	 

     field
     {
         fieldModel          	uniGasVolFields;
 
         timeProperties
         {
             sampleInterval                 1;
         	 resetAtOutput                  on;
         	 resetAtOutputUntilTime         1e-4;
         }
 
         uniGasVolFieldsProperties
         {
             field	                        Ar;
             typeIds                        (Ar);
             Tref                           273;
             measureMeanFreePath            true;
             measureHeatFluxShearStress     true;
             measureErrors                  true;
             averagingAcrossManyRuns        true;
         }
     }
  
);

