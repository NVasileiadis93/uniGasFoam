FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fieldPropertiesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


uspFields
(	 

     field
     {
         fieldModel          	uspVolFields;
 
         timeProperties
         {
            sampleInterval  1;
         	timeOption      write;
         	resetAtOutputUntilTime      5e-5;
         }
 
         uspVolFieldsProperties
         {
            field	                   Ar;
            typeIds                     (Ar);
            measureMeanFreePath         true;
            mfpReferenceTemperature     273;
            measureHeatFluxShearStress  true;
         }
     }
  
);

